<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--Os Styles utilizado para a aplicação-->
    <style name="container_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="operadores_button" parent="container_button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="igual_button" parent="container_button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numeros_button" parent="container_button">
        <item name="android:background">@drawable/btn_numero_clicado</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>